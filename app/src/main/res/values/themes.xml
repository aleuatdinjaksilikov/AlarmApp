<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAlarmApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/bg_fragments</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="setColorBottomNavView" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/ActiveIndicator</item>
    </style>

    
    <style name="ShapeableImageViewStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    
    <style name="MyThemeTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">#2A2E33</item>
        <item name="colorOnPrimary">#202429</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimaryContainer">#FFFFFF</item>
        <item name="clockNumberTextColor">@color/white</item>
        <item name="borderlessButtonStyle">@style/borderlessButtonStyle</item>
    </style>
    
    <style name="borderlessButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="DialogThemeTransparent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_layout</item>
        <item name="colorAccent">@color/dialog_blue_color</item>
        <item name="colorOnPrimary">@color/dialog_blue_color</item>
    </style>

   <style name="MyThemeDatePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
       <item name="colorOnSurface">@color/white</item>
       <item name="colorOnPrimaryContainer">@color/bg_fragments</item>
       <item name="colorOnPrimary">@color/dialog_blue_color</item>
       <item name="borderlessButtonStyle">@style/borderlessButtonStyle</item>
   </style>

    <style name="DatePickerButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    



</resources>